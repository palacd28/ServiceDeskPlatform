<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane style="-fx-background-color: #f4f6f9;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.servicedeskplatform.controller.LoginController">

    <VBox alignment="CENTER" prefHeight="186.0" prefWidth="268.0" spacing="15" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0">

        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Service Desk" />

        <VBox maxWidth="300" spacing="10" style="-fx-background-color: white;                      -fx-background-radius: 8;                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <TextField fx:id="txtUser" promptText="User" />

            <PasswordField fx:id="txtPassword" promptText="Password" />
         <Label fx:id="lblError" maxWidth="280.0" style="-fx-text-fill: #d63031; -fx-font-size: 12px;" text="&quot;&quot;" textFill="#cf1616" visible="false" wrapText="true">
            <font>
               <Font size="10.0" />
            </font>
         </Label>

            <Button fx:id="btnLogin" maxWidth="Infinity" onAction="#onLogin" style="-fx-background-color: #2f80ed;                            -fx-text-fill: white;                            -fx-font-weight: bold;" text="Login" textAlignment="CENTER" />
        </VBox>

    </VBox>
</AnchorPane>
